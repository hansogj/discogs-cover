{
  "name": "@hansogj/discogs-cover",
  "version": "1.2.0",
  "description": "A library and CLI to find and download album cover art from Discogs.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "bin": {
    "discogs-cover": "./dist/cjs/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "cli": "node dist/cjs/cli.js",
    "build": "pnpm clean && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json && tsc -p tsconfig.types.json",
    "clean": "rm -rf dist *.tgz",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "discogs",
    "album",
    "cover",
    "art",
    "cli"
  ],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@9.1.4",
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}